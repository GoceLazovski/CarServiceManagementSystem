@model Services.ViewModels.JobCardViewModel

@{
    ViewData["Title"] = "GetJobCard";
}

<h1>Job Card</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OdometerReading)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OdometerReading)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fuel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fuel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOutEstimated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOutEstimated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOutActual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOutActual)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerComment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerComment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.EmployeeId)
        </dd>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.VehicleId)
        </dd>
    </dl>
    <h4>
        @Html.DisplayNameFor(model => model.JobParts)
    </h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Part
                </th>
                <th>
                    Quantity
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.JobParts)
            {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.JobCardId)
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.SparePartId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SparePart.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityInstalled)
                </td>
                <td>
                    <a asp-controller="JobParts" asp-action="UpdateJobPart" asp-route-jobId="@item.JobCardId" asp-route-partId="@item.SparePartId">Edit</a> 
                </td>
                <td>
                    <a asp-controller="JobParts" asp-action="GetJobPart" asp-route-jobId="@item.JobCardId" asp-route-partId="@item.SparePartId">Details</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="UpdateJob" asp-route-id="@Model.Id"><input type="submit" value="Edit Job Card" class="btn btn-light" /></a> 
    <a asp-controller="JobParts" asp-action="InsertJobPart" asp-route-jobId="@Model.Id"><input type="submit" value="Add Parts" class="btn btn-light" /></a> 
    <a asp-action="Index"><input type="submit" value="Back to List" class="btn btn-light" /></a>
</div>
