@model Services.ViewModels.JobCardViewModel
@using Contracts.Models

@{
    ViewData["Title"] = "UpdateJob";
}

<h1>Update Job</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateJob">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OdometerReading" class="control-label"></label>
                <input asp-for="OdometerReading" class="form-control" />
                <span asp-validation-for="OdometerReading" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fuel" class="control-label"></label>
                <select asp-for="Fuel" asp-items="Html.GetEnumSelectList<Fuel>()"></select>
                <span asp-validation-for="Fuel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateIn" class="control-label"></label>
                <input asp-for="DateIn" class="form-control" />
                <span asp-validation-for="DateIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOutEstimated" class="control-label"></label>
                <input asp-for="DateOutEstimated" class="form-control" />
                <span asp-validation-for="DateOutEstimated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOutActual" class="control-label"></label>
                <input asp-for="DateOutActual" class="form-control" />
                <span asp-validation-for="DateOutActual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerComment" class="control-label"></label>
                <input asp-for="CustomerComment" class="form-control" />
                <span asp-validation-for="CustomerComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobDescription" class="control-label"></label>
                <input asp-for="JobDescription" class="form-control" />
                <span asp-validation-for="JobDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.UserName" class="control-label"></label>
                <input asp-for="Employee.UserName" class="form-control" readonly/>
                <input asp-for="EmployeeId" class="form-control"hidden/>
                <span asp-validation-for="Employee.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <input asp-for="VehicleId" class="form-control" />
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><input type="submit" value="Back to List" class="btn btn-light" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
